---
import type { CollectionEntry } from "astro:content"
import { printTime } from "../utils/talk-utils"

interface Props {
  talk: CollectionEntry<"talks">
}

const { talk } = Astro.props
const time = printTime(talk.data.date)
---

<li class="talk-card">
  <div>
    <!--href={talk.slug}-->
    <div class="time">{time}</div>
    <div>
      <div class="speaker">
        {talk.data.speakerName}
        {
          talk.data.speakerAffiliation &&
            " (" + talk.data.speakerAffiliation + ")"
        }
      </div>
      {talk.data.title && <div class="title">{talk.data.title}</div>}
    </div>
  </div>
</li>
<style>
  .time {
    font-weight: bold;
  }
  .speaker {
  }
  .title {
  }
  .talk-card {
    list-style: none;
    display: flex;
    transition: all 0.5s ease-in-out;
  }
  .talk-card > * {
    color: inherit;
    text-decoration: none;
    width: 100%;
    line-height: 1.4;
    padding: 0.5rem;
    border: none;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    gap: 1ex;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .talk-card:is(:hover, :focus-within) {
    background-color: rgb(var(--accent-color));
    color: white;
  }
</style>
